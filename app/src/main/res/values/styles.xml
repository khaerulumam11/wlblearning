<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black_effective</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_primary_24px</item>
    </style>

    <style name="AppTheme.ActionBar.White" parent="Theme.AppCompat.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gray</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_primary_24px</item>
    </style>

    <style name="AppThemeFullScreen" parent="AppTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/white</item>
    </style>

    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Regular.ttf</item>
    </style>

    <style name="TextAppearance.Text.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Bold.ttf</item>
    </style>

    <style name="TextAppearance.Text.Light" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Light.ttf</item>
    </style>

    <style name="TextAppearance.Text.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Italic.ttf</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/black_effective</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Title.Sub" parent="TextStyle.Title">
        <item name="android:textAppearance">@style/TextAppearance.Text.Light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Title.Sub.Posting" parent="TextStyle.Title">
        <item name="android:textAppearance">@style/TextAppearance.Text.Light</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="TextStyle.Heading.Posting" parent="TextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="TextStyle.Comment" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Italic</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/white</item>
        <!--do this for changing the color-->
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
    </style>

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextStyle.Heading">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Button.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_primary_bg</item>
    </style>

    <style name="Button.Secondary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_secondary_bg</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextStyle.EditText" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <!--Default Edit text Rounded-->
    <style name="TextStyle.EditText.Profile" parent="TextStyle.EditText">
        <item name="android:background">@drawable/et_profile_style</item>
        <item name="android:height">@dimen/default_height_edit_text</item>
        <item name="android:padding">@dimen/et_padding_default</item>
    </style>

    <style name="TextStyle.EditText.Account" parent="TextStyle.EditText">
        <item name="android:background">@drawable/et_login_style</item>
        <item name="android:height">@dimen/default_height_edit_text</item>
        <item name="android:padding">@dimen/et_padding_default</item>
    </style>


    <style name="Button.Action.Positive" parent="Button">
        <item name="android:textColor">@drawable/button_positive_text_drawable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Button.Action.Negative" parent="Button">
        <item name="android:textColor">@drawable/button_negative_text_drawable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="AppTab" parent="Widget.Design.TabLayout">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="tabTextAppearance">@style/AppTab.TextAppearance</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="AppTab.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTab.TextAppearance.Timeline" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Button.Primary.Quiz.Empty" parent="Button.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_primary_bg</item>
    </style>


    <style name="MyButtonWhitewCorner" parent="@style/Widget.AppCompat.Button">
        <item name="colorControlHighlight">@color/primaryTextColor</item>
        <item name="android:background">@drawable/btn_register</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:height">60dp</item>
    </style>

    <style name="MyButtonWhiteCorner.Default" parent="@style/Widget.AppCompat.Button">
        <item name="colorControlHighlight">@color/primaryTextColor</item>
        <item name="android:background">@drawable/btn_white_corner_primary</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    //wlb

    <style name="MyButtonPrimary" parent="@style/Widget.AppCompat.Button">
        <item name="colorControlHighlight">#E3F2FD</item>
        <item name="android:background">@drawable/selector_login_signin_button</item>
        <item name="android:height">@dimen/default_height_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyButtonPrimary.Default" parent="@style/Widget.AppCompat.Button">
        <item name="colorControlHighlight">#E3F2FD</item>
        <item name="android:background">@drawable/selector_login_signin_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyButtonPrimary.Default.Blue" parent="@style/Widget.AppCompat.Button">
        <item name="colorControlHighlight">#E3F2FD</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/blue_sky</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultWlbEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/et_login_style</item>
        <item name="android:height">@dimen/default_height_button</item>
    </style>

    <style name="SpinnerDefault" parent="@style/Widget.AppCompat.Spinner.DropDown">
        <item name="colorControlHighlight">#E3F2FD</item>
        <item name="android:height">@dimen/default_height_button</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:hint">@color/primaryTextColor</item>
        <item name="android:drawableLeft">@drawable/ic_arrow_down_primary_24dp</item>
    </style>

    <style name="SpinnerDefault.Theme" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:height">@dimen/default_height_edit_text</item>
        <item name="android:background">@drawable/spinner_login_language</item>
        <item name="android:drawableLeft">@drawable/ic_arrow_down_primary_24dp</item>
        <item name="android:radius">4dp</item>
        <item name="overlapAnchor">true</item>

    </style>

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/blue_sky</item>
    </style>
</resources>
